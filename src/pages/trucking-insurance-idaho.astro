    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://rmstruckers.com/" },
      { "@type": "ListItem", "position": 2, "name": "Idaho Trucking Insurance", "item": "https://rmstruckers.com/trucking-insurance-idaho/" }
    ]
  })} />

