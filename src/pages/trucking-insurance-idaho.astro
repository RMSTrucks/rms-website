<Layout
  title="Trucking Insurance Idaho | Local Expert | RMS Truck Insurance"
  description="Idaho-based trucking insurance agency serving owner-operators statewide. Local expertise, nationwide coverage. Call your Idaho insurance experts: 208-800-0640"
>
  <!-- Schema Markup -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "InsuranceAgency",
    "name": "RMS Truck Insurance",
    "description": "Idaho-based trucking insurance specialists for owner-operators and new authorities. Expert knowledge of Idaho Code including weight limits, chain laws, and registration requirements.",
    "areaServed": { "@type": "State", "name": "Idaho" },
    "telephone": "+1-208-800-0640",
    "url": "https://rmstruckers.com/trucking-insurance-idaho/",
    "knowsAbout": ["commercial trucking insurance", "new authority insurance", "Idaho trucking", "Idaho Code 49-948", "Idaho Code 49-1001", "Idaho chain laws", "Idaho weight limits"],
    "slogan": "Finally, someone on your side.",
    "address": {
      "@type": "PostalAddress",
      "addressRegion": "ID",
