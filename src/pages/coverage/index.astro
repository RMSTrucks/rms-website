---
import Layout from '../../layouts/Layout.astro';
import SEOHead from '../../components/SEOHead.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import PageHeader from '../../components/PageHeader.astro';
import { getCollection } from 'astro:content';

const coverageEntries = await getCollection('coverage');

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Coverage', href: '' },
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href ? { "item": `https://rmstruckers.com${item.href}` } : {}),
  })),
};

const icons: Record<string, string> = {
  'auto-liability': 'M12 2L3 7v7c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-9-5zm-1 14h2v2h-2v-2zm0-10h2v8h-2V6z',
  'physical-damage': 'M18 4h-1V2H7v2H6c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-4 15h-4v-2h4v2zm0-4h-4v-2h4v2zm2-4H8V4h8v7z',
  'cargo': 'M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z',
  'general-liability': 'M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z',
  'bobtail': 'M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zm-.5 1.5l1.96 2.5H17V9.5h2.5zM6 18c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm12 0c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z',
  'occupational-accident': 'M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z',
};
---

<Layout
  title="Trucking Insurance Coverage Types | RMS Truck Insurance"
  description="Understand every type of commercial trucking insurance: auto liability, physical damage, cargo, general liability, bobtail, and occupational accident coverage."
>
  <SEOHead
    slot="head"
    title="Trucking Insurance Coverage Types | RMS Truck Insurance"
    description="Understand every type of commercial trucking insurance: auto liability, physical damage, cargo, general liability, bobtail, and occupational accident coverage."
    canonicalUrl="/coverage/"
    jsonLd={breadcrumbSchema}
  />

  <div class="coverage-index">
    <div class="container">
      <Breadcrumbs items={breadcrumbItems} />
      <PageHeader
        title="Trucking Insurance Coverage Types"
        subtitle="Six coverages that protect your truck, your freight, your business, and you. Here's what each one actually does."
      />

      <div class="coverage-index__intro">
        <p>
          Most truckers get handed a policy and never understand what they're paying for.
          We think that's wrong. Below is every coverage type you'll encounter as an owner-operator
          or fleet owner -- what it covers, who needs it, and what it costs. No jargon. No fine print games.
        </p>
      </div>

      <div class="coverage-index__grid">
        {coverageEntries.map((entry) => (
          <a href={`/coverage/${entry.slug}/`} class="coverage-index__card">
            <svg class="coverage-index__icon" viewBox="0 0 24 24" width="36" height="36" fill="currentColor" aria-hidden="true">
              <path d={icons[entry.slug] || ''} />
            </svg>
            <h2 class="coverage-index__name">{entry.data.title}</h2>
            <p class="coverage-index__desc">{entry.data.shortDescription}</p>
            <span class="coverage-index__link">Learn more &rarr;</span>
          </a>
        ))}
      </div>

      <div class="coverage-index__cta">
        <p>
          Not sure which coverages you need? Call us at <a href="tel:+12088000640">(208) 800-0640</a>.
          We'll explain what you need and why -- no pressure, no upsell.
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .coverage-index {
    padding: 0 0 4rem;
  }

  .coverage-index__intro {
    max-width: 700px;
    margin-bottom: 2.5rem;
  }

  .coverage-index__intro p {
    font-family: 'DM Sans', sans-serif;
    color: var(--gray-600);
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .coverage-index__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .coverage-index__card {
    display: flex;
    flex-direction: column;
    padding: 2rem 1.5rem;
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
  }

  .coverage-index__card:hover {
    border-color: var(--gold);
    box-shadow: 0 4px 16px rgba(218, 165, 32, 0.12);
    transform: translateY(-2px);
  }

  .coverage-index__icon {
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .coverage-index__name {
    font-family: 'Crimson Pro', Georgia, serif;
    font-size: 1.35rem;
    font-weight: 600;
    color: var(--forest);
    margin: 0 0 0.5rem;
  }

  .coverage-index__desc {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.9rem;
    color: var(--gray-600);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .coverage-index__link {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--gold);
    margin-top: 1rem;
  }

  .coverage-index__cta {
    padding: 1.5rem;
    background: var(--bg-light);
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    text-align: center;
  }

  .coverage-index__cta p {
    font-family: 'DM Sans', sans-serif;
    color: var(--text);
    font-size: 1rem;
    margin: 0;
  }

  .coverage-index__cta a {
    color: var(--gold);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .coverage-index__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .coverage-index__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
