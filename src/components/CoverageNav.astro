---
interface Props {
  currentCoverage?: string;
  layout?: 'horizontal' | 'vertical';
  compact?: boolean;
  class?: string;
}

const { currentCoverage, layout = 'horizontal', compact = false, class: className } = Astro.props;

const coverageTypes = [
  { name: 'Auto Liability', slug: 'auto-liability', description: 'Required federal minimum coverage for bodily injury and property damage.' },
  { name: 'Physical Damage', slug: 'physical-damage', description: 'Covers your truck and trailer against collision, theft, and weather.' },
  { name: 'Cargo Insurance', slug: 'cargo', description: 'Protects the freight you haul from damage or loss in transit.' },
  { name: 'General Liability', slug: 'general-liability', description: 'Covers non-driving business operations and premises liability.' },
  { name: 'Bobtail Insurance', slug: 'bobtail', description: 'Covers your truck when driving without a trailer or off-dispatch.' },
  { name: 'Occupational Accident', slug: 'occupational-accident', description: 'Medical and disability coverage for independent owner-operators.' },
];

const icons: Record<string, string> = {
  'auto-liability': 'M12 2L3 7v7c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-9-5zm-1 14h2v2h-2v-2zm0-10h2v8h-2V6z',
  'physical-damage': 'M18 4h-1V2H7v2H6c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-4 15h-4v-2h4v2zm0-4h-4v-2h4v2zm2-4H8V4h8v7z',
  'cargo': 'M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z',
  'general-liability': 'M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z',
  'bobtail': 'M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zm-.5 1.5l1.96 2.5H17V9.5h2.5zM6 18c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm12 0c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z',
  'occupational-accident': 'M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z',
};
---

<nav class:list={[
  'coverage-nav',
  `coverage-nav--${layout}`,
  { 'coverage-nav--compact': compact },
  className,
]} aria-label="Coverage types">
  {compact ? (
    <ul class="coverage-nav__list">
      {coverageTypes.map((ct) => (
        <li class:list={['coverage-nav__list-item', { 'coverage-nav__list-item--active': currentCoverage === ct.slug }]}>
          <a href={`/coverage/${ct.slug}/`}>{ct.name}</a>
        </li>
      ))}
    </ul>
  ) : (
    <div class="coverage-nav__grid">
      {coverageTypes.map((ct) => {
        const isActive = currentCoverage === ct.slug;
        return (
          <a
            href={`/coverage/${ct.slug}/`}
            class:list={['coverage-nav__card', { 'coverage-nav__card--active': isActive }]}
          >
            <svg class="coverage-nav__icon" viewBox="0 0 24 24" width="28" height="28" fill="currentColor" aria-hidden="true">
              <path d={icons[ct.slug]} />
            </svg>
            <span class="coverage-nav__name">{ct.name}</span>
            <span class="coverage-nav__desc">{ct.description}</span>
          </a>
        );
      })}
    </div>
  )}
</nav>

<style>
  /* Grid layout */
  .coverage-nav__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .coverage-nav__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem 1rem;
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .coverage-nav__card:hover {
    border-color: var(--gold);
    box-shadow: 0 2px 8px rgba(218, 165, 32, 0.15);
  }

  .coverage-nav__card--active {
    border-color: var(--forest);
    background: rgba(27, 67, 50, 0.03);
  }

  .coverage-nav__icon {
    color: var(--gold);
    margin-bottom: 0.75rem;
  }

  .coverage-nav__name {
    font-family: 'Crimson Pro', Georgia, serif;
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--forest);
    margin-bottom: 0.35rem;
  }

  .coverage-nav__desc {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--gray-600);
    line-height: 1.5;
  }

  /* Compact list layout */
  .coverage-nav__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .coverage-nav__list-item a {
    display: block;
    padding: 0.5rem 0.75rem;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.85rem;
    color: var(--text);
    text-decoration: none;
    border-left: 3px solid transparent;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .coverage-nav__list-item a:hover {
    color: var(--gold);
    border-left-color: var(--gold);
  }

  .coverage-nav__list-item--active a {
    color: var(--forest);
    font-weight: 600;
    border-left-color: var(--gold);
  }

  @media (max-width: 768px) {
    .coverage-nav__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .coverage-nav__grid {
      grid-template-columns: 1fr;
    }

    .coverage-nav__card {
      flex-direction: row;
      text-align: left;
      gap: 1rem;
      padding: 1rem;
    }

    .coverage-nav__icon {
      margin-bottom: 0;
      flex-shrink: 0;
    }
  }
</style>
